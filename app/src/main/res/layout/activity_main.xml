<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jesusmartinez.example.com.bluet.MainActivity">



    <TextView android:id="@+id/textViewState"
        android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_marginTop="33dp"
        android:text="Estado" android:textAppearance="?android:attr/textAppearanceLarge" />


    <Button android:id="@+id/buttonTurnOn"
        android:onClick="onClickTurnOn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/textViewState" android:layout_marginTop="20dp" android:layout_centerHorizontal="true" android:text="Encender" />


    <Button
        android:id="@+id/buttonShowPaired" android:onClick="onClickPaired" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/buttonTurnOn" android:layout_marginTop="20dp" android:layout_centerHorizontal="true" android:text="Ver emparejados" />

    <Button
        android:id="@+id/buttonDiscovery" android:onClick="onClickDiscovery" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/buttonShowPaired" android:layout_marginTop="20dp" android:layout_centerHorizontal="true" android:text="Comenzar bÃºsqueda" />

    <Button
        android:id="@+id/buttonDiscoverable" android:onClick="onClickMakeDiscoverable" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/buttonDiscovery" android:layout_marginTop="20dp" android:layout_centerHorizontal="true" android:text="Hacer visible" />
</RelativeLayout>
